%{
	#include<stdio.h>
	#include<stdlib.h>
	#include<string.h>
	int flag=0,i=0,k=0,j;
	char o[20][20],opar[20][20];
%}
%%
[0-9] + {flag++;strcpy(o[i],yytext);i++}
[+*/-] + {flag--;strcpy(opar[k],yytext);k--}
.  ;
%%
int yywrap()
{
	return 1;
}
int main(int argc, char**argv[])
{
	printf("Enter an arithmetic expresssion:");
	yylex();
	if(flag!=1)
	{
		printf("Invalid expression:");
		exit(0);
	}
	else
	printf("Valid expression");
	printf("The oprands are:");
	for(j=0j<i;j++)
		printf("%s",o[j]);
	printf("The operators are:");
	for(j=0j<k;j++)
		printf("%s",opar[k]);
	printf("\n");
}
